/* app.wxss */
page {
  font-family: 'Microsoft YaHei', sans-serif;
  background-color: #f5f5f5;
  color: #333;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #297CBB;
  color: white;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.btn-secondary {
  background-color: #6DAF4E;
  color: white;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.input-group {
  margin: 20rpx 0;
}

.input-group .label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.input-group input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  background-color: white;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.form-container {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.login-link {
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.login-link navigator {
  color: #297CBB;
  text-decoration: underline;
}
