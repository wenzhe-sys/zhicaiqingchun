/* pages/consumption/analysis/analysis.wxss */
.container {
  background-color: #f5f5f5;
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 通用样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 消费概览 */
.overview-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-section .section-header {
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.overview-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: space-between;
}

.overview-card {
  flex: 1;
  min-width: 220rpx;
  background-color: white;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.card-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-subvalue {
  display: block;
  font-size: 20rpx;
  color: #666;
}

.card-change {
  display: flex;
  align-items: center;
  font-size: 20rpx;
}

.change-icon {
  color: #f5222d;
  margin-right: 4rpx;
}

.change-value {
  color: #f5222d;
  font-weight: bold;
  margin-right: 4rpx;
}

.change-desc {
  color: #999;
}

/* 消费趋势 */
.trend-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.trend-tabs {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 6rpx;
}

.tab {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 24rpx;
  margin: 0 4rpx;
}

.tab.active {
  background-color: #1890ff;
  color: white;
}

.chart-container {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 30rpx;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-placeholder {
  text-align: center;
  color: #999;
}

.placeholder-text {
  font-size: 24rpx;
}

/* 消费类别分布 */
.category-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 消费详情 */
.detail-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.detail-actions {
  display: flex;
  align-items: center;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  width: 300rpx;
}

.search-icon {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 24rpx;
  background-color: transparent;
  border: none;
  outline: none;
}

.detail-list {
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.item-info {
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item-text {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.item-date {
  font-size: 22rpx;
  color: #999;
}

.item-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
