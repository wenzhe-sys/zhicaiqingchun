/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.welcome-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx auto;
  border-radius: 50%;
  background-color: white;
  padding: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #297CBB;
  margin-bottom: 20rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.menu-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.menu-item {
  width: 48%;
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.menu-icon {
  margin-bottom: 20rpx;
}

.icon {
  font-size: 64rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.user-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary {
  background-color: #297CBB;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 90rpx;
  line-height: 90rpx;
}

.btn-secondary {
  background-color: #6DAF4E;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 90rpx;
  line-height: 90rpx;
}
